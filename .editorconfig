root = true

# All files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# JavaScript and TypeScript files
[*.js]
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.ts]
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.tsx]
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# JSON files
[*.json]
indent_style = space
indent_size = 2
